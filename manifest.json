{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/hello.html",
    "default_icon": "images/hello_extensions.png"
  },
  "content_scripts": [
    {
      "js": ["scanner/scanner.js"],
      "matches": [
        "https://www.skyscanner.net/transport/flights/*"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "scanner/background.js"
  },
  "permissions": ["notifications"]
}
