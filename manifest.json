{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/hello.html",
    "default_icon": "images/icon-16.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scanner/scanner.js"],
      "matches": [
        "https://www.skyscanner.net/transport/flights/*",
        "https://www.amazon.com/cart/*"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "scanner/background.js"
  },
  "permissions": [
    "cookies",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://hackeurope-zeta.vercel.app/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "notification/notification.html",
        "notification/notification.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
